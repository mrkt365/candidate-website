<div id="issues-container">
  <div id="issues-image-container">
    <img id="issues-image" src="https://cosmic-s3.imgix.net/af464f60-5a34-11e8-a6ea-1773a2afd5cd-alex-2.png"/>
  </div>
  <%= if not @mobile do %>

  <% end %>

  <div id="issues-text-container">
    <div id="issues-header-container">
      <h1 id="issues-header-text">
        <%= raw(@issues_header) %>
      </h1>
    </div>
    <div id="issues-paragraph-container">
      <p id="issues-paragraph-text">
        <%= raw(@issues_paragraph |> String.replace("<p>", "") |> String.replace("</p>", "")) %>
      </p>
    </div>

    <div id="issues-button-container">
      <button id="issues-cta-button" class="button issues-cta-button" onclick="window.location='/issues';">
        <%= gettext "Read My Full Platform" %>
      </button>
    </div>
  </div>
</div>
