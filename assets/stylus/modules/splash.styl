@require fonts

#splash-page-container
  flexbox(flex)
  max-width 100%
  height 100%

  #splash-page-background
    flexbox(flex)
    flex-wrap(wrap)
    align-items(center)
    justify-content(center)
    background-image url(https://cosmic-s3.imgix.net/87c44f00-e1c0-11e8-a78a-b55cf4487289-corey_low_light.jpg)
    background-size cover
    background-repeat no-repeat
    transition all 175ms ease-in-out
    width 100%

    @media (max-width: 767px)
      height 100%
      background-position 29%

    @media (min-width 768px) and (max-width 1220px)
      background-position 80% 40%
      background-size cover
      min-height 100%

    @media (min-width 1220px)
      background-position 66% 40%
      background-size auto
      min-height 100%

    #splash-page-form-container
      background linear-gradient(to right, rgba(60, 45, 130, 0), rgba(60, 45, 130, 0), rgba(60, 45, 130, 0), rgba(60, 45, 130, 0.9), rgba(60, 45, 130, 0.9), rgba(60, 45, 130, 1))
      background-size cover
      width 100%
      height 100%

      @media (max-width: 767px)
        background linear-gradient(to bottom, rgba(60, 45, 130, 1), rgba(60, 45, 130, 0.75), rgba(60, 45, 130, 0.75), rgba(60, 45, 130, 0.75), rgba(60, 45, 130, 0.75))
        flexbox(flex)
        justify-content(space-around)
        height 100%

      @media (min-width: 768px)
        flexbox(flex)
        align-items(flex-start)

      #splash-page-form
        border 0
        // Hello
        @media (max-width: 767px)
          flexbox(flex)
          flex-direction(column)
          justify-content(center)
          align-items(center)
          width 100%
          // height 100%

        @media (min-width: 768px) and (max-width: 1219px)
          max-width 400px
          padding 0
          margin-left auto
          margin-right 5%
          position relative
          z-index 99

        @media (min-width: 1220px)
          max-width 515px
          padding 0
          margin-left auto
          margin-right 5%
          position relative
          z-index 99

        #splash-form-logo-container
          flexbox(flex)
          flex-wrap(wrap)
          align-items(center)
          justify-content(center)

          @media (min-width: 768px)
            margin-top 3em

          @media (max-width 767px) and (min-height 745px)
            justify-content(center)
            margin-bottom 60px

          @media (max-width 767px) and (max-height 744px)
            margin-bottom 0px

          #splash-logo
            // lol
            @media (min-width 768px) and (max-width 1219px)
              // max-height: 150px
              max-width 35%

            @media (min-width 1220px)
              // max-height 200px
              max-width 35%

            @media (max-width: 767px)
              max-width 35%

        fieldset
          border 0
          margin 0
          padding 0
          max-height 100%

          @media (min-width: 768px)
            margin-top 20%
            margin-bottom auto

          #splash-form
            // Hello

            @media (max-width: 767px)
              flexbox(flex)
              flex-direction(column)
              align-content(space-around)
              justify-content(space-around)

            #splash-form-header-container
              flexbox(flex)
              flex-wrap(wrap)

              @media (max-width: 767px) and (max-height 745px)
                margin 8px 0

              #splash-form-header
                font-family primary_font_name
                font-size 50px
                text-align left
                color #ffffff

                @media (max-width: 767px)
                  width 100%
                  padding 0 10%
                  margin-right 0
                  font-size 36px

                @media (min-width: 768px) and (max-width: 1220px)
                  font-size 40px

                @media (max-height 600px)
                  font-size 28px


            #splash-form-subheader-container
              flexbox(flex)
              flex-wrap(wrap)
              margin 7px 0
              //Hello

              #splash-form-subheader
                margin 0
                font-family secondary_font_name
                font-weight 600
                font-size 18px
                text-align left
                color #ffffff

                @media (max-width: 767px)
                  width 100%
                  padding 0 10%
                  font-size 16px

            #input-row
              flexbox(flex)
              flex-wrap(nowrap)
              
              margin-top 12px
              flex-direction(row)

              @media (max-width: 767px)
                flex-direction(column)


              .field-input
                opacity 0.8
                height 60px
                color #000
                
                @media (max-width: 767px) and (max-height 745px)
                  height 45px

              label
                margin-bottom 3px
                font-size 16px
                text-transform lowercase
                color #ffffff

                @media (max-width: 767px)
                  font-size 14px

              #splash-email-input
                width 70%
                margin-right 1%

                @media (max-width: 767px)
                  width 100%
                  padding 0 10%
                  margin-right 0

                // @media (max-width: 767px) and (max-height 745px)
                //   width 100%
                //   padding 0 10%
                //   margin-right 0
                
                @media (min-width: 768px) and (max-width: 1220px)
                  width 60%
                  margin-right 1%

              #splash-zip-input
                width 30%
                margin-left 1%

                @media (max-width: 767px)
                  width 100%
                  padding 0 10%
                  margin 4px 0

                @media (max-height 745px)
                  // padding 0 10%
                  // margin 4px 0

            #button-row
              flexbox(flex)
              flex-wrap(nowrap)
              align-items(center)
              justify-content(space-between)
              flex-direction(row)
              margin-top 18px

              @media (max-width: 767px)
                flex-direction(column)
                flex-wrap(wrap)
                justify-content(center)

              #join-submit
                background-color #8C74FF
                padding 1em 2em 2em 2em
                font-family secondary_font_name
                font-size 18px
                font-weight 600
                line-height 18px
                text-align center
                width 300px
                &:hover
                  background-color #a974ff

                @media (min-width: 768px) and (max-width: 1220px)
                  padding 1em 2em 2em 2em
                  width 240px

                @media (max-width: 767px) and (max-height 745px)
                  padding 0.75em 10% 1.5em 10%
                  max-width 75%

                @media (max-width: 767px) and (min-height 746px)
                  padding 1em 10% 2em 10%
                  max-width 75%


              #continue-to-website
                color #ffffff
                font-family secondary_font_name
                font-size 16px
                font-weight 700

                @media (min-width: 768px) and (max-width: 1220px)
                  font-size 16px
                
                @media (max-width: 767px)
                  padding-top 1em
